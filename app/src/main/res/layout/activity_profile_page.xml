<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_page">

    <TextView
        android:id="@+id/username"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/main_desc"
        android:layout_width="411dp"
        android:layout_height="322dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username">

        <ImageView
            android:id="@+id/profilepic"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:visibility="visible"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/FollowButton"
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profilepic"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="36dp"
            android:gravity="center_horizontal"
            android:text="Follow"
            android:textSize="13sp"
            android:theme="@style/Widget.AppCompat.Button.Colored" />

        <TextView
            android:id="@+id/UserDescription"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/FollowButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="what"
            android:textAlignment="center"
            android:textSize="15sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/EditDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UserDescription"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Edit Description"
            android:textColor="#009688" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_desc">

        <GridView
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="456dp"
            android:gravity="center"
            android:horizontalSpacing="1dp"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="1dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>