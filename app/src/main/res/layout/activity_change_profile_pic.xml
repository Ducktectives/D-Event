    <ImageView
        android:id="@+id/img_ProfilePicture"
        android:layout_width="0dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"

        android:src="@drawable/file_upload_image_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_img"
        android:layout_width="265dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/file_upload_field"
        android:clickable="true"
        android:drawableStart="@drawable/file_upload_icon"
        android:drawablePadding="5dp"
        android:fontFamily="@font/zcool"
        android:gravity="center"
        android:minHeight="48dp"
        android:onClick="pick"
        android:text="Pick your image from Gallery"
        android:textColor="@color/white"
        android:textCursorDrawable="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_ProfilePicture" />


  <TextView
      android:id="@+id/submit_image"
      android:layout_width="265dp"
      android:layout_height="48dp"
      android:layout_marginTop="12dp"
      android:background="@drawable/file_upload_field"
      android:clickable="true"
      android:drawableStart="@drawable/file_upload_folder"
      android:drawablePadding="5dp"
      android:fontFamily="@font/zcool"
      android:gravity="center"
      android:minHeight="48dp"
      android:onClick="submit_the_form"
      android:text="Save Profile image"
      android:textColor="@color/white"
      android:textCursorDrawable="@null"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/item_img" />


