<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rose_quartz"
    tools:context=".BookingSummary">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bookingSummaryView"
                android:layout_width="417dp"
                android:layout_height="255dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/a1" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="264dp"
                android:layout_height="54dp"
                android:layout_marginTop="9dp"
                android:text="Booking Sucessful"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/BookingConfirmationEvent" />

            <TextView
                android:id="@+id/ConfirmationEnteredTickets"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                android:text="Undefined"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ConfirmationEnteredContact" />

            <TextView
                android:id="@+id/ConfirmationEnteredContact"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                android:text="Undefined"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ConfirmationEnteredEmail" />

            <TextView
                android:id="@+id/ConfirmationEnteredName"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                android:text="Undefined"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/ConfirmationEnteredEmail"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="30dp"
                android:text="Undefined"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ConfirmationEnteredName" />

            <TextView
                android:id="@+id/BookingConfirmationEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Event Name"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bookingSummaryView" />

            <Button
                android:id="@+id/BookingAddCalander"
                android:layout_width="146dp"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:text="Add to Calendar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ConfirmationClose"
                app:layout_constraintTop_toBottomOf="@+id/ConfirmationEnteredTickets" />

            <Button
                android:id="@+id/ConfirmationClose"
                android:layout_width="146dp"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:text="Close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/BookingAddCalander"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ConfirmationEnteredTickets"
                app:layout_constraintVertical_bias="0.507" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>