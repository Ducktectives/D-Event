<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rose_quartz"
    tools:context=".UserBooking">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10px">

            <EditText
                android:id="@+id/UserBookingName"
                android:layout_width="450dp"
                android:layout_height="55dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/txt_rounded_background"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="16px"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bookingName"
                app:layout_constraintTop_toBottomOf="@+id/eventimage"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/bookingName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/UserBookingName"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventimage" />

            <TextView
                android:id="@+id/bookingEmail"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/UserBookingEmail"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bookingName" />

            <EditText
                android:id="@+id/UserBookingPhone"
                android:layout_width="450dp"
                android:layout_height="55dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/txt_rounded_background"
                android:ems="10"
                android:inputType="phone"
                android:paddingLeft="16px"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bookingContact"
                app:layout_constraintTop_toBottomOf="@+id/UserBookingEmail"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/UserBookingEmail"
                android:layout_width="450dp"
                android:layout_height="55dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/txt_rounded_background"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:paddingLeft="16px"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bookingEmail"
                app:layout_constraintTop_toBottomOf="@+id/UserBookingName"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/bookingContact"
                android:layout_width="150dp"
                android:layout_height="51dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:text="Contact Number"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/UserBookingPhone"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bookingEmail" />

            <EditText
                android:id="@+id/UserBookingPax"
                android:layout_width="450dp"
                android:layout_height="55dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/txt_rounded_background"
                android:ems="10"
                android:inputType="number"
                android:paddingLeft="16px"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bookingNumberoftix"
                app:layout_constraintTop_toBottomOf="@+id/UserBookingPhone"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/bookingNumberoftix"
                android:layout_width="150dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="Number of Tickets"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/UserBookingPax"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bookingContact" />

            <Button
                android:id="@+id/confirmbooking"
                android:layout_width="250dp"
                android:layout_height="52dp"
                android:layout_marginTop="32dp"
                android:text="Book"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/UserBookingPax" />

            <ImageView
                android:id="@+id/eventimage"
                android:layout_width="0dp"
                android:layout_height="173dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/a1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>