<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailsPage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bigC"
            android:layout_width="492dp"
            android:layout_height="414dp"
            android:layout_marginTop="-120dp"
            android:layout_marginEnd="-120dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pink_circle"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/smallC"
            android:layout_width="430dp"
            android:layout_height="371dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="-140dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/red_circle" />

        <ImageView
            android:id="@+id/eventPicture"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.028"
            app:srcCompat="@drawable/loading" />

        <ImageView
            android:id="@+id/Detail"
            android:layout_width="599dp"
            android:layout_height="767dp"
            android:layout_marginTop="-40dp"
            android:layout_marginBottom="-700dp"
            android:cropToPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventPicture"
            app:srcCompat="@drawable/pink_rounded_square" />

        <TextView
            android:id="@+id/EventName"
            android:layout_width="349dp"
            android:layout_height="match_parent"
            android:layout_marginStart="88dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="30dp"
            android:scrollbars="vertical"
            android:text="Event Name"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/Detail"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Detail"
            app:layout_constraintTop_toBottomOf="@+id/eventPicture" />

        <TextView
            android:id="@+id/EventOrganiser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="8dp"
            android:scrollbars="vertical"
            android:text="by Who"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/Detail"
            app:layout_constraintTop_toBottomOf="@+id/EventLocation" />

        <TextView
            android:id="@+id/EventMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="72dp"
            android:scrollbars="vertical"
            android:text="OCT"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/Detail"
            app:layout_constraintTop_toBottomOf="@+id/eventPicture" />

        <TextView
            android:id="@+id/EventDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="88dp"
            android:scrollbars="vertical"
            android:text="Event Description"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/Detail"
            app:layout_constraintStart_toStartOf="@+id/Detail"
            app:layout_constraintTop_toBottomOf="@+id/EventOrganiser" />

        <TextView
            android:id="@+id/EventLocation"
            android:layout_width="238dp"
            android:layout_height="47dp"
            android:layout_marginStart="87dp"
            android:layout_marginTop="8dp"
            android:scrollbars="vertical"
            android:text="Event Location"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/Detail"
            app:layout_constraintTop_toBottomOf="@+id/EventName" />

        <TextView
            android:id="@+id/EventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="4dp"
            android:scrollbars="vertical"
            android:text="30"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/Detail"
            app:layout_constraintTop_toBottomOf="@+id/EventMonth" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="36dp"
            android:text="Details"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/Detail"
            app:layout_constraintTop_toBottomOf="@+id/EventDescription" />

        <TextView
            android:id="@+id/eventDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="88dp"
            android:scrollbars="vertical"
            android:text="Event Details"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/Detail"
            app:layout_constraintStart_toStartOf="@+id/Detail"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />


        <TextView
            android:id="@+id/timing"
            android:layout_width="423dp"
            android:layout_height="28dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="88dp"
            android:scrollbars="vertical"
            android:text="Timing"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/Detail"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Detail"
            app:layout_constraintTop_toBottomOf="@+id/eventDetails" />

        <TextView
            android:id="@+id/LocationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="24dp"
            android:text="Location"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/Detail"
            app:layout_constraintTop_toBottomOf="@+id/timing" />

        <fragment
            android:id="@+id/fragment"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="272dp"
            android:layout_height="211dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.335"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LocationText" />

        <Button
            android:id="@+id/bookbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Book Now"
            app:layout_constraintEnd_toEndOf="@+id/Detail"
            app:layout_constraintStart_toStartOf="@+id/Detail"
            app:layout_constraintTop_toBottomOf="@+id/fragment" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>