<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailsPage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bigC"
            android:layout_width="492dp"
            android:layout_height="414dp"
            android:layout_marginTop="-120dp"
            android:layout_marginEnd="-120dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pink_circle" />

        <ImageView
            android:id="@+id/smallC"
            android:layout_width="430dp"
            android:layout_height="371dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="-140dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/red_circle" />

        <ImageView
            android:id="@+id/eventPicture"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.028"
            app:srcCompat="@drawable/loading" />

        <ImageView
            android:id="@+id/Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cropToPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventPicture"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/pink_rounded_square" />

        <TextView
            android:id="@+id/EventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="336dp"
            android:scrollbars="vertical"
            android:text="Event Name"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/EventMonth"
            app:layout_constraintTop_toBottomOf="@+id/eventPicture" />

        <TextView
            android:id="@+id/EventOrganiser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="8dp"
            android:scrollbars="vertical"
            android:text="by Who"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/Detail"
            app:layout_constraintTop_toBottomOf="@+id/EventLocation" />

        <TextView
            android:id="@+id/EventMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="148dp"
            android:layout_marginTop="55dp"
            android:scrollbars="vertical"
            android:text="OCT"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventPicture" />

        <TextView
            android:id="@+id/EventDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="5dp"
            android:scrollbars="vertical"
            android:text="Event Description"
            app:layout_constraintEnd_toEndOf="@+id/Detail"
            app:layout_constraintStart_toStartOf="@+id/Detail"
            app:layout_constraintTop_toBottomOf="@+id/EventOrganiser" />

        <TextView
            android:id="@+id/EventLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="87dp"
            android:layout_marginTop="8dp"
            android:scrollbars="vertical"
            android:text="Event Location"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/Detail"
            app:layout_constraintTop_toBottomOf="@+id/EventName" />

        <TextView
            android:id="@+id/EventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="156dp"
            android:layout_marginTop="4dp"
            android:scrollbars="vertical"
            android:text="30"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EventMonth" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="36dp"
            android:text="Details"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/Detail"
            app:layout_constraintTop_toBottomOf="@+id/EventDescription" />

        <TextView
            android:id="@+id/eventDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="5dp"
            android:scrollbars="vertical"
            android:text="Event Description"
            app:layout_constraintEnd_toEndOf="@+id/Detail"
            app:layout_constraintStart_toStartOf="@+id/Detail"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <Button
            android:id="@+id/bookbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="40dp"
            android:text="Book Now"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/Detail"
            app:layout_constraintStart_toStartOf="@+id/Detail"
            app:layout_constraintTop_toBottomOf="@+id/eventDetails"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>